#!/usr/bin/env ruby

$LOAD_PATH << File.dirname(__FILE__) + '/../lib/'

require 'open-uri'
require 'distillery'
require 'slop'

opts = Slop.parse :help => true do

  on :d, :dirty, 'Do not clean content HTML', default: false
  on :v, :version, 'Print the version' do
    puts Distillery::VERSION
    exit
  end

  banner "Usage: distill [options] http://www.example.com/"
end

unless ARGV.last =~ /^http/
  puts opts.help
else
  puts Distillery.distill(open(ARGV.last).read, :dirty => opts.dirty?)
end